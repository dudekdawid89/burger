<div class="container">
    <div class="text-center">
        <div class="row">
        <span id="burgerSign" class="col-lg-12 col-md-12 col-xs-12">Burger Restaurant</span>

        </div>
    </div>
    <br>
    <div class="input-group">
        <input type="text" class="form-control" id="burger-input" placeholder="Enter you favourite burger"
            aria-label="Recipient's username" aria-describedby="basic-addon2">
        <div class="input-group-append">
            <button class="btn btn-outline-light burger-button" type="button">Button</button>
        </div>
    </div>
    <br>
    <br>
    <br>
    <div class="row">
        <div class="col-md-6 col-sm-12 ">
            <div class="card">
                <div class="card-body">
                    <h1 class="text-center" id="yourOrder">Your order</h1>
                    <br>
                    {{#each burgers}}
                    {{#unless devoured}}
                    <div class="row">
                        <div class="col-9">
                            <span id="b1"><i class="fa fa-hamburger"></i> {{burgerName}}</span>
                        </div>
                        <div class="col-3">
                            <button type="button" class="btn btn-outline-dark btn-lg eat"
                                id={{id_burger}}>Devour</button>
                        </div>
                    </div>
                    <br>
                    {{/unless}}
                    {{/each}}
                </div>
            </div>
        </div>
<br>
        <div class="col-md-6 col-sm-12 ">
            <div class="card">
                <div class="card-body">
                    <h1 class="text-center" id="yourOrder">Devoured</h1>
                    <br>
                    {{#each burgers}}
                    {{#if devoured}}
                    <div class="row">
                        <div class="col-lg-9">
                            <span id="b2"><i class="fa fa-hamburger"></i> {{burgerName}}</span>
                        </div>
                        <div class="col-lg-3 col-md-12">
                            <button type="button" class="btn btn-outline-danger btn-lg delete"
                                id={{id_burger}}>Delete</button>
                        </div>
                    </div>
                    <br>
                    {{/if}}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>